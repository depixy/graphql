{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "target": "es2021",
    "module": "node16",
    "declaration": true,
    "sourceMap": true,
    "lib": ["es2021"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@depixy/graphql": ["src/index.ts"],
      "@depixy/graphql/schema/type": ["src/schema/type/index.ts"],
      "@depixy/graphql/schema/generated": ["src/schema/graphql.generated.ts"],
      "@depixy/graphql/schema/util": ["src/schema/util/index.ts"],
      "@depixy/graphql/error": ["src/error/index.ts"],
      "@depixy/graphql/schema/test": ["src/schema/__tests__/index.ts"]
    }
  },
  "include": ["src"],
  "ts-node": {
    "esm": true,
    "files": true,
    "transpileOnly": true
  }
}
